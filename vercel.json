{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "regions": ["icn1"],
  "functions": {
    "pages/api/**/*.ts": {
      "maxDuration": 10,
      "memory": 1024
    },
    "pages/api/products/preview.ts": {
      "maxDuration": 15,
      "memory": 1024
    },
    "pages/api/citydirect/page.ts": {
      "maxDuration": 10,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    },
    {
      "source": "/marketing/citydirect/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/admin/:path*",
      "destination": "/admin/:path*"
    }
  ]
}

